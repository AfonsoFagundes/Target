package Prova;

import java.util.Scanner;

	public class Fibonacci {
	    public static void main(String[] args) {
	        Scanner sc = new Scanner(System.in);
	        
	        // solicita ao usuário um número para verificar se pertence à sequência de Fibonacci
	        System.out.print("Digite um número para verificar se pertence à sequência de Fibonacci: ");
	        int num = sc.nextInt();
	        
	        int a = 0; // primeiro número da sequência
	        int b = 1; // segundo número da sequência
	        int c = 0; // próximo número da sequência
	        
	        while (c < num) { // calcula a sequência até chegar no número informado
	            c = a + b;
	            a = b;
	            b = c;
	        }
	        
	        if (c == num) { // verifica se o número pertence à sequência
	            System.out.println(num + " pertence à sequência de Fibonacci!");
	        } else {
	            System.out.println(num + " não pertence à sequência de Fibonacci!");
	        }
}
