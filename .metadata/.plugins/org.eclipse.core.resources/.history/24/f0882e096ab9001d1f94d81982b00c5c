package Prova;

import java.util.Scanner;

public class FaturamentoDiario {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		double menorValor = Integer.MAX_VALUE;
		double maiorValor = Integer.MIN_VALUE;
		
		double valoresDiarios ;
		
		System.out.println("Digite o faturamento diario da empresa: ");
		valoresDiarios = sc.nextDouble();
		while(valoresDiarios < 0 || valoresDiarios > 22 ) {
			System.out.println("Insira o faturamento novamente:  ");
			valoresDiarios = sc.nextDouble();
			
			
		
		}
	
		
	
	}

}
